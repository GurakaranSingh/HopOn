@using HopOn.Services;
@inherits FileListBaseClass
<h3>File List</h3>
<div class="card-deck">
    @if (FileLists != null)
    {
        @foreach (var File in FileLists)
        {
            <div class="card m-3" style="min-width: 18rem; max-width:24.5%;">
                <div class="card-header">
                    <h3>@File.FileName</h3>
                </div>
                <img class="card-img-top imageThumbnail" src="" />
                <div class="card-footer text-center">
                    <a href="#" class="btn btn-primary m-1">View</a>
                    <a href="#" class="btn btn-primary m-1">Download</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        }
    }
</div>

