
@inherits ShowQuotaBaseClass

<style>
    .custom-quta {
        background-color: #ff0000;
        float: left;
    }

    .custom-qutabg {
        background-color: #4cff00;
    }

    .progress-viewquota {
        width: 100%;
        float: left;
    }

    .width-100 {
        width: 100%;
        float: left;
    }

    .width-50 {
        width: 50%;
        float: left;
    }

    .width-40 {
        width: 40%;
        float: left;
    }

    .width-30 {
        width: 30%;
        float: left;
    }

    .width-60 {
        width: 60%;
        float: left;
    }

    .view-qoutasec {
        background-color: #fff;
        background-clip: border-box;
        border: 1px solid rgba(0,0,0,.125);
        border-radius: .25rem;
        width: 100%;
        float: left;
        padding: 20px;
        display: flex;
    }

    .custd-flex {
        display: flex;
    }
</style>
<div class="view-qoutasec">
    <div class="progress-viewquota">
        <div class="width-100">
            <div class="custd-flex">
                <div class="width-50">Download Quota </div>
                <div class="width-60">
                    <div class="width-100">@model.RemainingDownloadQuota/@model.DownloadQuota </div>
                    <div class="width-100">
                        <div class="progress custom-quta" style="width:60%; height:6px; ">
                            <div class="progress-bar custom-qutabg" role="progressbar" style="width:@model.RemainingDownloadPercentage%; " aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">&nbsp;</div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

    <div class="progress-viewquota">
        <div class="width-100">
            <div class="custd-flex">
                <div class="width-40">Upload Quota</div>
                <div class="width-60">
                    <div class="width-100">@model.RemainingUploadQuota/@model.UploadQuota</div>
                    <div class="width-100">
                        <div class="progress custom-quta" style="width:60%; height: 6px; ">
                            <div class="progress-bar custom-qutabg" role="progressbar" style="width:@model.RemainiuploadPercentage%; " aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">&nbsp;</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="progress-viewquota">
        <div class="width-100">
            <div class="custd-flex">
                <div class="width-40">Storage Quota</div>
                <div class="width-60">
                    <div class="width-100"> @model.StorageQuota</div>
                    <div class="width-100">
                        <div class="progress custom-quta" style="width:60%; height:6px;">
                            <div class="progress-bar custom-qutabg" role="progressbar" style="width:@model.StorageQuotaPercentage%; " aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">&nbsp;</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<button id="RefreshQuota" @onclick="()=>RefreshQuota()" style="display:none;"></button>

